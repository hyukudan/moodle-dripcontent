<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="availability/condition/dripcontent/db" VERSION="20241217" COMMENT="XMLDB file for availability_dripcontent">
  <TABLES>
    <TABLE NAME="availability_dripcontent_ntf" COMMENT="Tracks which users have been notified about content unlocks">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="User ID"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Course module ID"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="When notification was sent"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="cmid" TYPE="foreign" FIELDS="cmid" REFTABLE="course_modules" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_cmid" UNIQUE="true" FIELDS="userid, cmid" COMMENT="Ensure one notification per user per module"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
